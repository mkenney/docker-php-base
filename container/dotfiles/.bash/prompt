#!/usr/bin/env bash

#
# Set the bash prompt
# https://wiki.archlinux.org/index.php/Color_Bash_Prompt
#

# Load color definitions
. ~/.bash/color

function prompt_command() {

    local last_status=$?

    GIT_PS1_SHOWDIRTYSTATE=1
    GIT_PS1_SHOWSTASHSTATE=1
    GIT_PS1_SHOWUNTRACKEDFILES=
    GIT_PS1_SHOWUPSTREAM=1
    git_line=$(__git_ps1 '%s')

    local -a ps1_lines
    # Line 1
    if [ "$EUID" = "0" ]; then # Root
        ps1_lines+='\nâ”Œ(\[${COLOR_RED_BLINK}\]\u\e[0m\[${COLOR_YELLOW}\]@\H\[${COLOR_NORM}\]) - \[${COLOR_NORM_HIGHLIGHT}\]\[$PWD\]\[${COLOR_NORM}\]'
    else
        ps1_lines+='\nâ”Œ(\[${COLOR_GREEN}\]\u\[${COLOR_YELLOW}\]@\H\[${COLOR_NORM}\]) - \[${COLOR_NORM_HIGHLIGHT}\]\[$PWD\]\[${COLOR_NORM}\]'
    fi

    # Line 2
    if [ "" != "$git_line" ]; then # In a git repo
        ps1_lines+='\nâ”œ[\[${COLOR_BLUE_FADED}\]$(__git_ps1 "git: %s")\[${COLOR_NORM}\]]'
    fi

    # Line 3
    if [ "0" == "$last_status" ]; then
        ps1_lines+='\nâ””(\[${COLOR_GREEN}\]ï¼„\[${COLOR_NORM}\])â†’ '
    else
        # http://emojipedia.org/
        ps1_lines+='\nâ””(ðŸ’€ )â¤³ ' # Last script exited with a non-zero code
        #ps1_lines+='\nâ””(ðŸ”´ )â¤³ ' # Last script exited with a non-zero code
        #ps1_lines+='\nâ””(â€¼ï¸ )â¤³ ' # Last script exited with a non-zero code
        #ps1_lines+='\nâ””(âŒ )â¤³ ' # Last script exited with a non-zero code
        #ps1_lines+='\nâ””(â›” )â¤³ ' # Last script exited with a non-zero code
        #ps1_lines+='\nâ””(ðŸš« )â¤³ ' # Last script exited with a non-zero code
    fi

    PS1="${ps1_lines[*]}"
}

export PROMPT_COMMAND=prompt_command

export PS2='\[${COLOR_NORM_BOLD}\]\>\[${COLOR_NORM}\] '
